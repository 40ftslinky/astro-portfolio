---
interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
	herobg?: string;
}

const { align = 'center', tagline, title } = Astro.props;
---
<header class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<h1 class="title slide-up fade-in">{title}</h1>
		{tagline && <p class="tagline slide-up fade-in delay-200">{tagline}</p>}
	</div>
	<slot />
</header>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		margin-inline: auto;
	}
	.title {
		max-width: 18ch;
	}
	.tagline {
		max-width: 40ch;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	.hero {
			justify-content: center;
	}
	.hero .stack {			
			gap:2rem;
	}

	@media (min-width: 50em) {
		.hero {
			height: calc(90vh - var(--nav_hght));
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
